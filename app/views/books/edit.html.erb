<div class="row">
	<div class="col-md-6 col-md-offset-3">

		<h1>Editing Book</h1>

		<%= render "books/form", book: @book %>
		<%= link_to "Show", book_path(@book), class: "book_#{@book.id}" %>
		|
		<%= link_to "Back", books_path, class: "back" %>


 <div class="error">
   <% if @book.errors.any? %>
   <div id="error_explanation" class="alert alert-danger error">
    <ul>
     error
     <% @book.errors.full_messages.each do |message| %>
      <li><%=message %></li>
      <% end %>
    </ul>
   </div>
   <% end %>
   </div>
   
	</div>
	<div class="col-md-3"></div>


</div>